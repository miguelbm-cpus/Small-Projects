def computepay(h, r):
    overtime = h - 40
    ot = overtime * r * 1.5
    if h > 40:
        return (40 * r) + ot
    else:
        return h * r

try:

    hrs = input("Enter hours: ")
    h = float(hrs)

    rate = input("Enter pay rate: ")
    r = float(rate)
            
    pay = computepay(h, r)
    print("Pay", pay)
    
except ValueError:
    print("Enter a valid value.")
